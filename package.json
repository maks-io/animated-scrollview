{
  "name": "animated-scrollview",
  "version": "2.0.1",
  "description": "A react native scrollview that lets you easily animate its children based on the scrolling position, to achieve classical one-pager animations etc.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "keywords": [
    "react native",
    "react native web",
    "animation",
    "scrollview",
    "slide in",
    "slide out",
    "landing page"
  ],
  "scripts": {
    "clear-build-folder": "rm -rf ./build",
    "transpile": "tsc",
    "fix-paths": "tsc-alias",
    "build": "yarn clear-build-folder && yarn transpile && yarn fix-paths",
    "dev": "yarn nodemon"
  },
  "files": [
    "build"
  ],
  "repository": "git@github.com:maks-io/animated-scrollview.git",
  "author": "Markus Kurzmann <markus@kurzmann.io>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/react": "~18.3.3",
    "@types/react-native": "~0.73.0",
    "expo": "^51.0.17",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.74.3",
    "react-native-reanimated": "~3.10.1",
    "tsc": "^2.0.4",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "react-native-reanimated": "3.x"
  }
}
